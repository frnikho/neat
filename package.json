  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.15",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "modules/*"
    ],
    "catalog": {
      "@typescript/native-preview": "^7.0.0-dev.20250529.1",
      "bun-types": "latest",
      "@types/bun": "^1.2.15"
